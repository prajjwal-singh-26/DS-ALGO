class Solution {
    bool check(int mid, vector<int>& c) {
        int count = 0;
        for(int ci:c)
            count += ci >= mid;

        return count >= mid;
    }
public:
    int hIndex(vector<int>& citations) {
        int low = 1, high = citations.size(), ans = 0;

        while(low <= high) {
            int mid = low + (high - low) / 2;
            if(check(mid, citations)) {
                ans = mid;
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }

        return ans;
    }
};
