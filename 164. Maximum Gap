class Solution {
public:
    int maximumGap(vector<int>& nums) {
        int n=nums.size();
        sort(nums.begin(),nums.end());
        int diff=0;
        int maxi=INT_MIN;
        vector<int>ans;
        int res=0;
        if(n<2)
        return 0;
        for(int i=1;i<n;i++)
        {     
                diff=nums[i]-nums[i-1];
                maxi=max(maxi,diff);
                // ans.push_back(diff);
        }
            // sort(ans.begin(),ans.end());
            // res=ans.back();
        // return res;
        return maxi;
    }
};
